<!DOCTYPE html>
<html lang="eng">
<head>
    <title>Archived Restaurants | MyRestaurant</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/administrator.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
<div>
    <%- include('_navbar') %>
</div>
<div class="container">
    <h1 class="mb-4 mt-4">Archived Restaurants</h1>
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
    </div>

    <% restaurants.forEach(restaurant => {%>
        <div class="card mt-4">
            <div class="card-body">
                <h4 class="card-title"><%= restaurant.name %></h4>
                <div class="card-subtitle text-muted mb-2">
                    <%= restaurant.streetName + ' ' + restaurant.streetNumber %>
                </div>

                <div class="card-body text-end p-0">
                    <form action="/administrator/archived/<%= restaurant.id %>" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-edit">Unarchive</button>
                    </form>
                </div>
            </div>
        </div>
    <% }) %>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
</body>
</html>
